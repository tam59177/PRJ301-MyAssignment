<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomepageController</servlet-name>
        <servlet-class>controller.home.HomepageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateLeaveRequestController</servlet-name>
        <servlet-class>controller.leaverequest.CreateLeaveRequestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LeaveRequestController</servlet-name>
        <servlet-class>controller.leaverequest.LeaveRequestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailLeaveRequestController</servlet-name>
        <servlet-class>controller.leaverequest.DetailLeaveRequestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditLeaveRequestController</servlet-name>
        <servlet-class>controller.leaverequest.EditLeaveRequestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgendaController</servlet-name>
        <servlet-class>controller.agenda.AgendaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>HomepageController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateLeaveRequestController</servlet-name>
        <url-pattern>/leaverequest/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LeaveRequestController</servlet-name>
        <url-pattern>/leaverequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailLeaveRequestController</servlet-name>
        <url-pattern>/leaverequest/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditLeaveRequestController</servlet-name>
        <url-pattern>/leaverequest/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgendaController</servlet-name>
        <url-pattern>/agenda</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
